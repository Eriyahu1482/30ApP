<Window
    x:Class="_30ApP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_30ApP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock Name="label1" Text="{DynamicResource Hello}" />
        <Button
            Width="50"
            Height="50"
            Click="Button_Click"
            Command="{Binding ShowMessageCommand}" />
        <Button
            Width="50"
            Height="50"
            Margin="150,0,0,0"
            Click="Button1_Click" />
    </Grid>
</Window>
